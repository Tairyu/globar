{
  "name": "globar",
  "description": "Run browserify and watchify with globs",
  "version": "0.9.3",
  "author": "Masaya Kamakura <kamakura.masaya@gmail.com> (https://github.com/mkamakura)",
  "bin": "bin/globar",
  "bugs": {
    "url": "https://github.com/mkamakura/globar/issues"
  },
  "dependencies": {
    "browserify": "^13.0.1",
    "glob": "^7.0.3",
    "globby": "^4.1.0",
    "mkdirp": "^0.5.1",
    "watchify": "^3.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "bump": "^0.2.5",
    "chai": "^3.5.0",
    "eslint": "^2.10.2",
    "fixpack": "^2.3.1",
    "istanbul": "^0.4.3",
    "mocha": "^2.5.3",
    "npm-run-all": "^2.1.1",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "touch": "^1.0.0"
  },
  "files": [
    "lib",
    "bin"
  ],
  "homepage": "https://github.com/mkamakura/globar#readme",
  "keywords": [
    "browserify",
    "cli",
    "glob",
    "watchify"
  ],
  "license": "MIT",
  "main": "bin/globar",
  "repository": {
    "type": "git",
    "url": "git+https://mkamakura@github.com/mkamakura/globar.git"
  },
  "scripts": {
    "build": "babel src --out-dir lib --source-maps inline",
    "clean": "rimraf lib",
    "fixpack": "fixpack",
    "globar": "bin/globar \"tests/sample-project/lib/**/*.js\"",
    "test": "istanbul cover _mocha --dir coverage/node -- --bail --recursive tests/fixtures tests/specs",
    "lint": "eslint src test",
    "mkdir": "mkdir lib",
    "mocha": "mocha --bail --recursive tests/fixtures tests/specs",
    "watch": "babel src --out-dir lib --watch --source-maps",
    "bump" : "bump --prompt --tag --push --all",
    "release": "npm-run-all fixpack clean build test bump publish"
  }
}
